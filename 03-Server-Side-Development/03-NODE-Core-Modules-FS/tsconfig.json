{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "allowJs": false,

    "types": ["node"]
  },

  "include": ["./"],
  "exclude": ["node_modules", "dist"]
}
